<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".launchmode.LaunchModeActivity">

    <Button
        android:layout_marginTop="48dp"
        android:id="@+id/bt_launch_standard"
        android:text="Launch Standard"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="8dp"
        android:id="@+id/bt_launch_singleTop"
        android:text="Launch SingleTop"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="8dp"
        android:id="@+id/bt_launch_singleTask"
        android:text="Launch SingleTask"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="8dp"
        android:id="@+id/bt_launch_singleInstance"
        android:text="Launch SingleInstance"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>